<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cart"
    android:orientation="horizontal"
    android:layout_centerInParent="true"
    card_view:cardUseCompatPadding="true"
    card_view:theme="@style/CardView.Light"
    card_view:cardCornerRadius="2dp"
    android:clickable="true"
    android:layout_marginBottom="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/cart_item_book_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/book_name"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/cart_item_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/book_name"
                android:layout_marginTop="16dp"
                android:maxLength="20"
                />
            <TextView
                android:id="@+id/cart_item_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/book_name"
                android:layout_marginTop="10dp"
                android:maxLength="20"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>